{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.tally.dev/rules/tally/max_lines.schema.json",
  "title": "tally/max-lines rule config",
  "description": "Configuration options for the tally/max-lines rule.",
  "type": "object",
  "properties": {
    "severity": { "$ref": "../rule-config.schema.json#/$defs/severity" },
    "fix": { "$ref": "../rule-config.schema.json#/$defs/fix" },
    "exclude": { "$ref": "../rule-config.schema.json#/$defs/exclude" },
    "max": {
      "type": "integer",
      "minimum": 0,
      "default": 50,
      "description": "Maximum number of lines allowed (0 = disabled).",
      "examples": [100]
    },
    "skip-blank-lines": {
      "type": "boolean",
      "default": true,
      "description": "Exclude blank lines from the count.",
      "examples": [true]
    },
    "skip-comments": {
      "type": "boolean",
      "default": true,
      "description": "Exclude comment lines from the count.",
      "examples": [true]
    }
  },
  "additionalProperties": false,
  "examples": [
    { "max": 100 },
    { "severity": "warning", "max": 200, "skip-comments": false },
    { "exclude": { "paths": ["test/**"] }, "max": 120 }
  ]
}
