{
  "version": "2.1.0",
  "$schema": "https://raw.githubusercontent.com/oasis-tcs/sarif-spec/main/sarif-2.1/schema/sarif-schema-2.1.0.json",
  "runs": [
    {
      "tool": {
        "driver": {
          "informationUri": "https://github.com/tinovyatkin/tally",
          "name": "tally",
          "rules": [
            {
              "id": "buildkit/InvalidDefinitionDescription",
              "shortDescription": {
                "text": "Comment for build stage or argument should follow the format: `# \u003carg/stage name\u003e \u003cdescription\u003e`. If this is not intended to be a description comment, add an empty line or comment between the instruction and the comment."
              },
              "helpUri": "https://docs.docker.com/go/dockerfile/rule/invalid-definition-description/"
            },
            {
              "id": "buildkit/MaintainerDeprecated",
              "shortDescription": {
                "text": "The MAINTAINER instruction is deprecated, use a label instead to define an image author"
              },
              "helpUri": "https://docs.docker.com/go/dockerfile/rule/maintainer-deprecated/"
            },
            {
              "id": "buildkit/StageNameCasing",
              "shortDescription": {
                "text": "Stage names should be lowercase"
              },
              "helpUri": "https://docs.docker.com/go/dockerfile/rule/stage-name-casing/"
            }
          ],
          "version": "dev (buildkit v0.27.1)"
        }
      },
      "artifacts": [
        {
          "location": {
            "uri": "testdata/buildkit-warnings/Dockerfile"
          },
          "length": -1
        }
      ],
      "results": [
        {
          "ruleId": "buildkit/InvalidDefinitionDescription",
          "ruleIndex": 0,
          "level": "warning",
          "message": {
            "text": "Comment for FROM should follow the format: `# builder \u003cdescription\u003e`"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "testdata/buildkit-warnings/Dockerfile"
                },
                "region": {
                  "startLine": 2,
                  "startColumn": 1,
                  "snippet": {
                    "text": "FROM alpine:3.18 AS Builder"
                  }
                }
              }
            }
          ]
        },
        {
          "ruleId": "buildkit/StageNameCasing",
          "ruleIndex": 2,
          "level": "warning",
          "message": {
            "text": "Stage name 'Builder' should be lowercase"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "testdata/buildkit-warnings/Dockerfile"
                },
                "region": {
                  "startLine": 2,
                  "startColumn": 1,
                  "snippet": {
                    "text": "FROM alpine:3.18 AS Builder"
                  }
                }
              }
            }
          ]
        },
        {
          "ruleId": "buildkit/MaintainerDeprecated",
          "ruleIndex": 1,
          "level": "warning",
          "message": {
            "text": "Maintainer instruction is deprecated in favor of using label"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "testdata/buildkit-warnings/Dockerfile"
                },
                "region": {
                  "startLine": 3,
                  "startColumn": 1,
                  "snippet": {
                    "text": "MAINTAINER test@example.com"
                  }
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
