{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.tally.dev/rules/tally/prefer_run_heredoc.schema.json",
  "title": "tally/prefer-run-heredoc rule config",
  "type": "object",
  "properties": {
    "severity": {
      "type": "string",
      "enum": ["off", "error", "warning", "info", "style"]
    },
    "fix": {
      "type": "string",
      "enum": ["never", "explicit", "always", "unsafe-only"]
    },
    "exclude": {
      "type": "object",
      "properties": {
        "paths": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "min-commands": {
      "type": "integer",
      "minimum": 2,
      "default": 3
    },
    "check-consecutive-runs": {
      "type": "boolean",
      "default": true
    },
    "check-chained-commands": {
      "type": "boolean",
      "default": true
    }
  },
  "additionalProperties": false
}
