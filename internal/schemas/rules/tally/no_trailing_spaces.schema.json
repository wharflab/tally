{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.tally.dev/rules/tally/no_trailing_spaces.schema.json",
  "title": "tally/no-trailing-spaces rule config",
  "type": "object",
  "properties": {
    "severity": {
      "type": "string",
      "enum": ["off", "error", "warning", "info", "style"]
    },
    "fix": {
      "type": "string",
      "enum": ["never", "explicit", "always", "unsafe-only"]
    },
    "exclude": {
      "type": "object",
      "properties": {
        "paths": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "skip-blank-lines": {
      "type": "boolean",
      "default": false
    },
    "ignore-comments": {
      "type": "boolean",
      "default": false,
      "description": "Skip lines starting with # (Dockerfile comments and # lines in heredocs)"
    }
  },
  "additionalProperties": false
}
