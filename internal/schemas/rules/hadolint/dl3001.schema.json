{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.tally.dev/rules/hadolint/dl3001.schema.json",
  "title": "hadolint/DL3001 rule config",
  "type": "object",
  "properties": {
    "severity": {
      "type": "string",
      "enum": ["off", "error", "warning", "info", "style"]
    },
    "fix": {
      "type": "string",
      "enum": ["never", "explicit", "always", "unsafe-only"]
    },
    "exclude": {
      "type": "object",
      "properties": {
        "paths": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "invalid-commands": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}
