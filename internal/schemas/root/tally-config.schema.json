{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tally.wharflab.com/root/tally-config.schema.json",
  "title": "tally configuration",
  "description": "Configuration schema for tally Dockerfile linter",
  "type": "object",
  "properties": {
    "rules": {
      "type": "object",
      "properties": {
        "include": {
          "type": "array",
          "items": { "type": "string" }
        },
        "exclude": {
          "type": "array",
          "items": { "type": "string" }
        },
        "tally": {
          "$ref": "../../rules/tally/index.schema.json"
        },
        "hadolint": {
          "$ref": "../../rules/hadolint/index.schema.json"
        },
        "buildkit": {
          "$ref": "../../rules/buildkit/index.schema.json"
        }
      },
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": ["text", "json", "sarif", "github-actions", "markdown"],
          "default": "text"
        },
        "path": {
          "type": "string",
          "default": "stdout"
        },
        "show-source": {
          "type": "boolean",
          "default": true
        },
        "fail-level": {
          "type": "string",
          "enum": ["error", "warning", "info", "style", "none"],
          "default": "style"
        }
      },
      "additionalProperties": false
    },
    "inline-directives": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "warn-unused": {
          "type": "boolean",
          "default": false
        },
        "validate-rules": {
          "type": "boolean",
          "default": false
        },
        "require-reason": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "ai": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "command": {
          "type": "array",
          "items": { "type": "string" }
        },
        "timeout": {
          "type": "string",
          "default": "90s"
        },
        "max-input-bytes": {
          "type": "integer",
          "default": 262144,
          "minimum": 0
        },
        "redact-secrets": {
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "slow-checks": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["auto", "on", "off"],
          "default": "auto"
        },
        "fail-fast": {
          "type": "boolean",
          "default": true
        },
        "timeout": {
          "type": "string",
          "default": "20s"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
