{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.tally.dev/root/tally-config.schema.json",
  "title": "tally configuration",
  "description": "Configuration schema for tally Dockerfile linter",
  "$defs": {
    "genericRuleConfig": {
      "type": "object",
      "properties": {
        "severity": {
          "type": "string",
          "enum": ["off", "error", "warning", "info", "style"]
        },
        "fix": {
          "type": "string",
          "enum": ["never", "explicit", "always", "unsafe-only"]
        },
        "exclude": {
          "type": "object",
          "properties": {
            "paths": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "rules": {
      "type": "object",
      "properties": {
        "include": {
          "type": "array",
          "items": { "type": "string" }
        },
        "exclude": {
          "type": "array",
          "items": { "type": "string" }
        },
        "tally": {
          "type": "object",
          "properties": {
            "max-lines": { "$ref": "../rules/tally/max_lines.schema.json" },
            "consistent-indentation": { "$ref": "../rules/tally/consistent_indentation.schema.json" },
            "no-trailing-spaces": { "$ref": "../rules/tally/no_trailing_spaces.schema.json" },
            "newline-between-instructions": { "$ref": "../rules/tally/newline_between_instructions.schema.json" },
            "newline-per-chained-call": { "$ref": "../rules/tally/newline_per_chained_call.schema.json" },
            "prefer-add-unpack": { "$ref": "../rules/tally/prefer_add_unpack.schema.json" },
            "prefer-run-heredoc": { "$ref": "../rules/tally/prefer_run_heredoc.schema.json" },
            "prefer-copy-heredoc": { "$ref": "../rules/tally/prefer_copy_heredoc.schema.json" },
            "prefer-multi-stage-build": { "$ref": "../rules/tally/prefer_multi_stage_build.schema.json" }
          },
          "additionalProperties": { "$ref": "#/$defs/genericRuleConfig" }
        },
        "hadolint": {
          "type": "object",
          "properties": {
            "DL3001": { "$ref": "../rules/hadolint/dl3001.schema.json" },
            "DL3026": { "$ref": "../rules/hadolint/dl3026.schema.json" }
          },
          "additionalProperties": { "$ref": "#/$defs/genericRuleConfig" }
        },
        "buildkit": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/genericRuleConfig" }
        }
      },
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": ["text", "json", "sarif", "github-actions", "markdown"],
          "default": "text"
        },
        "path": {
          "type": "string",
          "default": "stdout"
        },
        "show-source": {
          "type": "boolean",
          "default": true
        },
        "fail-level": {
          "type": "string",
          "enum": ["error", "warning", "info", "style", "none"],
          "default": "style"
        }
      },
      "additionalProperties": false
    },
    "inline-directives": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "warn-unused": {
          "type": "boolean",
          "default": false
        },
        "validate-rules": {
          "type": "boolean",
          "default": false
        },
        "require-reason": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "ai": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "command": {
          "type": "array",
          "items": { "type": "string" }
        },
        "timeout": {
          "type": "string",
          "default": "90s"
        },
        "max-input-bytes": {
          "type": "integer",
          "default": 262144,
          "minimum": 0
        },
        "redact-secrets": {
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "slow-checks": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["auto", "on", "off"],
          "default": "auto"
        },
        "fail-fast": {
          "type": "boolean",
          "default": true
        },
        "timeout": {
          "type": "string",
          "default": "20s"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
