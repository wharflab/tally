{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":gitSignOff", ":semanticCommits"],
  "dependencyDashboard": false,
  "automerge": true,
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "schedule": ["after 9am and before 5pm every weekday", "every weekend"],
  "timezone": "UTC",
  "labels": ["dependencies", "renovate"],
  "commitMessagePrefix": "chore(deps):",
  "semanticCommits": "enabled",
  "rebaseWhen": "conflicted",
  "rangeStrategy": "bump",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Makefile$", "^\\.github/workflows/ci\\.yaml$"],
      "matchStrings": [
        "PMD_VERSION\\s*[:=]\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "pmd-bin-(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "pmd/pmd",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "bumpVersion": "patch"
    },
    {
      "matchManagers": ["dockerfile"],
      "matchFileNames": ["internal/integration/testdata/**"],
      "enabled": false
    },
    {
      "matchManagers": ["github-actions"],
      "pinDigests": false
    },
    {
      "matchManagers": ["pep621"],
      "matchFileNames": ["packaging/pypi/pyproject.toml"],
      "matchDepNames": ["python"],
      "enabled": false
    },
    {
      "matchDatasources": ["github-releases"],
      "matchDepNames": ["pmd/pmd"],
      "automerge": true,
      "groupName": "PMD"
    }
  ]
}
